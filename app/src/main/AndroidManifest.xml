<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.suzei.racoon">

    <!-- TODO remove unbind in all fragment -->

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".Racoon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".auth.ui.StartActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AddActivity" />
        <activity android:name=".activity.ChatRoomActivity" />
        <activity android:name=".friend.ui.FriendActivity" />
        <activity android:name=".activity.GroupActivity" />
        <activity android:name=".activity.MembersActivity" />
        <activity android:name=".chat.ui.GroupChatActivity" />
        <activity android:name=".chat.ui.SingleChatActivity"></activity>
    </application>

</manifest>